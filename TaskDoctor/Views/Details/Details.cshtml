<div class="row">
    <div class="col-md-3">
        <h1><i>@Model.Name</i></h1>
        <div class="col-md-6">
            <a href="/Home" class="btn btn-primary btn-dark">Home</a>
        </div>
    </div>
</div>

<div class="row col-3">
    <form id="patientForm" action="/Details/AddPatient">
        <div class="mb-3">
            <label for="patient-name" class="form-label mt-4">Patient Name</label>
            <input type="text" id="patient-name" name="Name" required class="form-control" placeholder="Enter patient name">
            <input type="hidden" id="patient-id" name="Id" required class="form-control">

            <label for="appointment-date" class="form-label mt-4">Appointment Date:</label>
            <input type="date" id="appointment-date" class="form-control" name="Date" required>

            <label for="appointment-time" class="form-label mt-4">Appointment Time:</label>
            <input type="time" id="appointment-time" class="form-control" name="Time" required>

            <input type="hidden" name="DoctorId" value="@Model.Id" required>
        </div>

        <!-- Submit button triggers the modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmSubmitModal">
            Submit
        </button>
    </form>
</div>
